{
  "name": "latevaweb/laravel-translatable",
  "description": "Laravel package to make Eloquent models attributes translatables",
  "keywords": [
    "translatable",
    "localization",
    "translations",
    "eloquent",
    "laravel"
  ],
  "homepage": "https://github.com/latevaweb/laravel-translatable",
  "type": "laravel-package",
  "license": "MIT",
  "authors": [
    {
      "name": "Marc Guinea",
      "email": "marc@latevaweb.com",
      "homepage": "https://www.latevaweb.com",
      "role": "Developer"
    }
  ],
  "require": {
    "php" : "^7.3",
    "illuminate/database": "^6.0|^7.0|^8.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^7.0|^8.0|^9.0",
    "orchestra/testbench": "^4.0|^5.0"
  },
  "autoload": {
    "psr-4": {
      "LaTevaWeb\\Translatable\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "LaTevaWeb\\Translatable\\Tests\\": "tests"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit",
    "test-coverage": "phpunit --coverage-html coverage"
  },
  "config": {
    "sort-packages": true
  },
  "extra": {
    "laravel": {
      "providers": [
        "LaTevaWeb\\Translatable\\TranslatableServiceProvider"
      ]
    }
  }
}